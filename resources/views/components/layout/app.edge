<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    @vite(['resources/css/app.css', 'resources/js/app.js'])
    <title>{{ title }}</title>

    <!-- Tambahkan Font yang Lembut -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #fff0f5; /* pink muda */
      }
    </style>
  </head>
  <body class="text-gray-700">

    <!-- Header -->
    <header class="flex flex-wrap sm:justify-start sm:flex-nowrap w-full bg-pink-200 text-sm py-4 shadow-md">
      <nav class="max-w-[85rem] w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between">
        <a class="flex-none font-bold text-2xl text-pink-600 focus:outline-none" href="#" aria-label="Brand">
          Bimbel Nana
        </a>

        <div class="flex flex-row items-center gap-5 mt-5 sm:justify-end sm:mt-0 sm:ps-5">

          @eval(await auth.check())

          @if(auth.isAutenticated)

          <div class="text-pink-700 font-semibold">{{ auth.user.name }}</div>

          <form action="/logout?_method=DELETE" method="post" class="flex items-center gap-2">
            {{ csrfField() }}
            <button class="bg-pink-400 text-white py-2 px-4 rounded-full hover:bg-pink-500 transition">
              Log Out
            </button>
          </form>

          @else
            <a href="/login" class="bg-white border border-pink-400 text-pink-500 font-semibold py-2 px-4 rounded-full hover:bg-pink-50 transition">
              Masuk Akun
            </a>
            <a href="/register" class="bg-pink-400 text-white font-semibold py-2 px-4 rounded-full hover:bg-pink-500 transition">
              Daftar
            </a>
          @end
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="grow mt-6 px-4">
      {{{ await $slots.main() }}}
    </main>

  </body>
</html>
